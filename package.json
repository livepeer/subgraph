{
  "name": "@livepeer/subgraph",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "create:local": "graph create livepeer/livepeer --node http://127.0.0.1:8020",
    "create:docker": "graph create livepeer/livepeer --node http://graph-node:8020",
    "codegen": "graph codegen --debug --output-dir src/types/",
    "build": "graph build --debug",
    "prepare": "yarn prepare:arbitrum-one && yarn codegen",
    "deploy": "graph deploy $SUBGRAPH --debug --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy:local": "graph deploy livepeer/livepeer --debug --ipfs http://127.0.0.1:5001 --node http://127.0.0.1:8020",
    "deploy:docker": "graph deploy livepeer/livepeer --debug --ipfs http://ipfs:5001 --node http://graph-node:8020",
    "deploy:arbitrum-one": "yarn prepare:arbitrum-one && SUBGRAPH=livepeer/arbitrum-one yarn deploy",
    "deploy:arbitrum-rinkeby": "yarn prepare:rinkeby && SUBGRAPH=livepeer/arbitrum-rinkeby yarn deploy",
    "prepare:arbitrum-one": "NETWORK_NAME=arbitrum-one node ./templatify.js",
    "prepare:arbitrum-rinkeby": "NETWORK_NAME=arbitrum-rinkeby node ./templatify.js",
    "prepare:development": "prepare:yaml NETWORK_NAME=development node ./templatify.js",
    "docker:build": "docker build --cache-from livepeer/subgraph:latest -t livepeer/subgraph:latest .",
    "test:docker": "DOCKER=true hardhat test --network=docker",
    "test:development": "npx hardhat test --network=development",
    "test": "yarn docker:build && docker-compose -f test/integration/docker-compose.yaml up --abort-on-container-exit"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.26.0",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/mocha": "^9.1.1",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.9.3"
  },
  "dependencies": {
    "@graphprotocol/graph-ts": "^0.24.1",
    "apollo-fetch": "^0.7.0",
    "bignumber.js": "^9.0.0",
    "fs-extra": "^8.1.0",
    "handlebars": "^4.5.2",
    "js-yaml": "^3.13.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "typy": "^3.3.0",
    "yaml-convert": "^1.0.1"
  }
}
